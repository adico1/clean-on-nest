{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "../../../..": ["apps/bootcamp-client/src/app"],
      "@btcp/bootcamp-ui": ["libs/bootcamp-ui/src/index.ts"],
      "@btcp/bootcamp-model": ["libs/bootcamp-model/src/index.ts"],
      "@btcp/bootcamp-data": ["libs/bootcamp-data/src/index.ts"],
      "@btcp/bootcamp-blogic": ["libs/bootcamp-businesslogic/src/index.ts"],
      "@btcp/bootcamp-entities": ["libs/bootcamp-entities/src/index.ts"],
      "@btcp/bootcamp-interfaceadapters": [
        "libs/bootcamp-interfaceadapters/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
